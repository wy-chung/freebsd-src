
#NO_UNIVERSE

include "GENERIC"

ident QEMU

options 	HZ=100
options 	ROOTDEVNAME=\"ufs:/dev/vtbd0\"

#makeoptions	DEBUG="-g -O1"	# debug symbols and optimization
options KDB
options DDB
options	GDB			# compile in support for the remote debugger

options	INVARIANT_SUPPORT   # A prerequisite for INVARIANTS
#options	INVARIANTS
#options	WITNESS
#options	WITNESS_SKIPSPIN
#options 	DIAGNOSTIC
#options	KDB_UNATTENDED

nooptions	NUMA
#nooptions	KTRACE
nooptions	MAC

options 	GEOM_NOP		# Test class.
options 	GEOM_STRIPE		# Disk striping.

nodevice	spibus
nodevice	spigen
nodevice	iicbus
nodevice	iicoc

nooptions 	USB_DEBUG		# enable debug msgs
nodevice	ohci			# OHCI USB interface
nodevice	uhci			# UHCI USB interface
nodevice	ehci			# EHCI USB interface (USB 2.0)
nodevice	xhci			# XHCI USB interface (USB 3.0)
nodevice	usb			# USB Bus (required)
nodevice	usbhid			# USB HID Transport
nodevice	hkbd			# Keyboard
nodevice	ukbd			# Keyboard
nodevice	umass			# Disks/Mass storage - Requires scbus and da
nodevice	uart_lowrisc
